{% extends "layout.jinja2" %}

{% block title %}
Drink: {{ drink_id }}
{% endblock title %}

{% block content %}
    <main id="content">
      <div class="w-full max-w-xs">
        <form
          class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
          method="GET"
          action="/orders"
        >
          <h3
            class="px-4 font-bold text-xl mb-2 text-white bg-purple-800"
          >
            Some Drink
          </h3>
          <input type="hidden" name="drink_id" value="{{drink_id}}" />
          <div class="flex items-center justify-between">
            <button
              class="order bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-1 px-4 rounded focus:outline-none focus:shadow-outline"
              type="submit"
            >
              Place order for {{ drink_id }}
            </button>
          </div>
        </form>
      </div>
    </main>
{% endblock content %}
